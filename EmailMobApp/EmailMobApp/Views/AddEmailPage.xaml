<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmailMobApp.Views.AddEmailPage">
    <ContentPage.Content>
        <Grid
            RowDefinitions="30,30,30"
            ColumnDefinitions="70,*"
            Padding="10">
            <Frame 
                Grid.RowSpan="3"
                Grid.Column="0"
                Padding="0"
                CornerRadius="100"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                HeightRequest="70"
                WidthRequest="70">
                <Image Source="profilePictureLogo.png"/>
            </Frame>
            <Label Text="{Binding To}"
                    FontSize="Large"
                    TextColor="Black"
                    Grid.Column="1"
                    Grid.Row="0"/>
            <Label Text="{Binding Subject}"
                    FontSize="Medium"
                    TextColor="Black"
                    Grid.Column="1"
                    Grid.Row="1"/>
            <Label Text="{Binding Content}"
                    FontSize="Small"
                    TextColor="Black"
                    Grid.Column="1"
                    Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>